{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>truxnell/renovate-config",
    "github>truxnell/renovate-config:automerge-github-actions",
    "github>aquaproj/aqua-renovate-config#1.5.1",
    "github>aquaproj/aqua-renovate-config:installer-script#1.5.1(install-aqua\\.sh)",
    "github>aquaproj/aqua-renovate-config:file#1.5.1(^aqua/.*\\.ya?ml$)"
  ],
  "platform": "github",
  "username": "trux-bot[bot]",
  "gitAuthor": "Trux-Bot <19149206+trux-bot[bot]@users.noreply.github.com>",
  "repositories": ["truxnell/vyos-config"],
  "automerge": true,
  "regexManagers": [
    {
      "description": ["Generic Docker image Regex manager"],
      "fileMatch": [
        "config-parts/.+\\.sh$"
      ],
      "matchStrings": [
        "set container name .* image '?(?<depName>.*?):(?<currentValue>[^'\n]*=?)'?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["\\.chezmoiscripts\\/.+\\.sh\\.tmpl$"],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*) datasource=(?<datasource>.*)\\n\\s*current_\\w+_version=(?<currentValue>.+)\\b"
      ]
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": "kubernetes-sigs/kustomize",
      "versioning": "regex:^\\w+\\/v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
